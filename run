#!/usr/bin/env bash

write_file() {
	if [[ -z $1 ]]; then
		echo "Creating empty file"
		touch "textfile.txt"
	else
		echo "Creating & writing $1 to file"
		echo "$1" >"textfile.txt"
	fi
}

check_file() {
	if [[ -f "textfile.txt" ]]; then
		echo "File exists"
	else
		echo "File does not exist"
		write_file "$@"
	fi
}

case $1 in
"--help")
	echo "$0 literally only creates a file called textfile.txt"
	echo "or appends the second argument to a new file"
	;;
*)
	check_file "$@"
	;;
esac
